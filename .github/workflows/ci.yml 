name: iOS CI

# Trigger workflow on push or pull request to main branch
on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  build:
    runs-on: macos-latest

    steps:
      # 1️⃣ Checkout repository code
      - name: Checkout code
        uses: actions/checkout@v3

      # 2️⃣ Select Xcode version
      - name: Select Xcode
        run: sudo xcode-select -s /Applications/Xcode.app

      # 3️⃣ Install CocoaPods dependencies
      - name: Install CocoaPods
        run: |
          sudo gem install cocoapods
          pod install --project-directory="./APOD App"

      # 4️⃣ Build the app
      - name: Build App
        run: |
          xcodebuild \
            -workspace "./apodapp/APOD App.xcworkspace" \
            -scheme "APOD App" \
            -sdk iphonesimulator \
            -destination 'platform=iOS Simulator,name=iPhone 14' \
            build

      # 5️⃣ Run unit tests (optional)
      - name: Run Tests
        run: |
          xcodebuild \
            -workspace "./apodapp/APOD App.xcworkspace" \
            -scheme "APOD App" \
            -sdk iphonesimulator \
            -destination 'platform=iOS Simulator,name=iPhone 14' \
            test
